<%= render partial: 'layouts/flash_alerts' %>

<div class="row">
<%= simple_form_for reservation, url: reservations_path(reservation) do |f| %>
  <div class="col-md-4">
    <%= f.input :name, label: false, placeholder: 'Name' %>
  </div>
  <div class="col-md-4">
    <%= f.text_field :time, class: 'date datetimepicker form-control',
                                    id: 'datetimepicker' %>
  </div>
  <div class="col-md-2">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
</div>